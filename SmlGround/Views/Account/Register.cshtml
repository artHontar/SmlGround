@model SmlGround.Models.RegistrationModel
@{
    ViewBag.Title = "Sign up";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

@section customcss {
    <link rel="stylesheet" href="~/Content/regAndLogin.css" />
}
<div class="card card-1">
    <div class="card-heading">

    </div>
    <div class="card-body">
        <h2 class="title">Регистрация</h2>
        <form action="/Account/Register" method="post" class="form-autoriz">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false)

            <div class="input-group">
                @*@Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })*@
                @Html.EditorFor(m => m.Email, new { @class = "input--style-1" })

            </div>
            <div class="row row-space">
                <div class="col-6">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Name, new { @class = "input--style-1" })
                        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-6">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Surname, new { @class = "input--style-1" })
                        
                    </div>
                </div>
            </div>
            <div class="row row-space">
                <div class="col-7">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "input--style-1" })
 
                    </div>
                </div>
                <div class="col-5">
                    <div class="input-group">
                        @Html.EditorFor(m => m.Birthday, new { @class = "input--style-1" })
 
                    </div>
                </div>
            </div>
            <div class="input-group">
                @Html.PasswordFor(m => m.Password, new { @class = "input--style-1", placeholder = "Пароль" })
            </div>
            <div class="input-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input--style-1", placeholder = "Подтвердите пароль" })
            </div>
            <div class="p-t-20">
                <button class="btn btn--radius btn--green" type="submit">Зарегистрировать</button>
            </div>
        </form>
    </div>
</div>
