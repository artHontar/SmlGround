@model SmlGround.Models.RegistrationModel
@{
    ViewBag.Title = "Sign up";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-autoriz" }))
{
    @Html.AntiForgeryToken()
    <h2>Регистрация</h2>
    @Html.ValidationSummary(false)
    <table>
        <tr>
            <td><label for="Email">Email</label></td>
            <td>@Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
        <tr>
            <td><label for="Year">Имя</label></td>
            <td>@Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
        <tr>
            <td><label for="Year">Фамилия</label></td>
            <td>@Html.EditorFor(x => x.Surname, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
        <tr>
            <td><label for="Password">Имя пользователя</label></td>
            <td>@Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
        <tr>
            <td><label for="Password">Дата рождения</label></td>
            <td>@Html.EditorFor(x => x.Birthday, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>

        <tr>
            <td><label for="Password">Пароль</label></td>
            <td>@Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>
        <tr>
            <td><label for="PasswordConfirm">Подтвертите пароль</label></td>
            <td>@Html.EditorFor(x => x.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })</td>
        </tr>

        <tr style="text-align:right">
            <td></td>
            <td>
                <input class="login-button" type="submit" value="Зарегистрировать" />
            </td>
        </tr>
    </table>
}

