@model SmlGround.Models.LoginModel
@{
    ViewBag.Title = "Sign in";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-autoriz" }))
{
    @Html.AntiForgeryToken()
    <h2>Вход на сайт</h2>
    <div>
        @Html.ValidationSummary()
        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
        <table>
            <tr>
                <td><label for="Email">Email</label></td>
                <td>@Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr>
                <td><label for="Password">Password</label></td>
                <td>@Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })</td>
            </tr>
            <tr style="text-align:right">
                <td></td>
                <td>
                    <input class="login-button" type="submit" value="Войти" />
                </td>
            </tr>
        </table>
    </div>
}
