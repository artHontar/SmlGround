    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/Content/Site.css" />
    @RenderSection("customcss", required: false)
    @*@Styles.Render("~/Content/css")*@
    @Scripts.Render("~/bundles/modernizr")
