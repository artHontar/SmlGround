@model IEnumerable<SmlGround.Models.ProfileViewModel>
@{
    ViewBag.Title = "People";
}
@section customcss {
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/people.css">
}

<div class="container bootstrap snippet">

    <div class="jumbotron list-content">
        <div class="row">
            <div class="col-6 header">
                <h3 class="text-muted prj-name">
                    <span class="fa fa-users fa-2x principal-title"></span>
                    People list
                </h3>
            </div>
            <div class="col-6">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-9">
                            <input id="forSearch" class="form-control form-control-lg form-control-borderless" type="search" placeholder="Search">
                        </div>
                        <!--end of col-->
                        <div style="padding-left: 10px" class="col-3">
                            <button id="search" class="btn btn-success btn-lg" type="button">Search</button>
                        </div>
                        <!--end of col-->
                    </div>
                </form>
            </div>
        </div>
        <div style="text-align: center; padding-top: 20px;" id="forUl">
            @{ Html.RenderPartial("UsersList"); }
        </div>
    </div>
</div>
<script>
    document.querySelector("button#search").addEventListener("click", function() {
        var input = document.querySelector("input#forSearch");
        if (input.value != "") {
            $("#forUl").load('@Url.Action("FindPeople","Social")' + '?text=' + input.value);
        }
    },true);
</script>
<script type="text/javascript" src="~/Scripts/AJAXWorkWithFriends.js"></script>
<script>
    var label = document.querySelectorAll(".pull-right");
    for (let i = 0; i < label.length; i++) {
        label[i].addEventListener("click", function (event) { WorkWithFriend(event.target); }, true);
    }
</script>