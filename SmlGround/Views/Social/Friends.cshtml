@model IEnumerable<SmlGround.Models.ProfileViewModel>

@{
    ViewBag.Title = "Friends";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section customcss {
    <link rel="stylesheet" href="~/Content/people.css">
}

<div class="container bootstrap snippet">

    <div class="jumbotron list-content">
        <div class="row">
            <div class="col-6 header">
                <h3 class="text-muted prj-name">
                    <span class="fa fa-users fa-2x principal-title"></span>
                    Friends list
                </h3>
            </div>
            <div class="col-6">
                <form class="card card-sm">
                    <div class="card-body row no-gutters align-items-center">
                        <div class="col-9">
                            <input id="forSearch" class="form-control form-control-lg form-control-borderless" type="search" placeholder="Search">
                        </div>
                        <!--end of col-->
                        <div style="padding-left: 10px" class="col-3">
                            <button id="search" class="btn btn-success btn-lg" type="button">Search</button>
                        </div>
                        <!--end of col-->
                    </div>
                </form>
            </div>
        </div>
        <div style="text-align: center; padding-top: 20px;" id="forUl">
            @{ Html.RenderPartial("FriendsList"); }
        </div>
    </div>
</div>
@Scripts.Render("~/bundles/friends")